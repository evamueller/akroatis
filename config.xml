<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="com.dohack.akroatis" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Akroatis</name>
  <description>&#xD;
        A sample Apache Cordova application that responds to the deviceready event.&#xD;
    </description>
  <author email="dev@cordova.apache.org" href="http://cordova.io">&#xD;
        Apache Cordova Team&#xD;
    </author>
  <content src="index.html"/>
  <plugin name="cordova-plugin-whitelist" spec="1"/>
  <access origin="*"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <platform name="android">
    <allow-intent href="market:*"/>
    <splash src="platforms\android\res\drawable-port-mdpi\splash.png" density="port-mdpi"/>
    <splash src="platforms\android\res\drawable-port-ldpi\splash.png" density="port-ldpi"/>
    <splash src="platforms\android\res\drawable-port-xhdpi\splash.png" density="port-xhdpi"/>
    <splash src="platforms\android\res\drawable-port-xxhdpi\splash.png" density="port-xxhdpi"/>
    <splash src="platforms\android\res\drawable-port-xxxhdpi\splash.png" density="port-xxxhdpi"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>
  <preference name="SplashScreen" value="screen"/>
  <preference name="SplashScreenDelay" value="5000"/>
</widget>
